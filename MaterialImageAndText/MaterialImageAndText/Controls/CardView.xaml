<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialImageAndText.Controls.CardView"
             Padding="0" Margin="10" VerticalOptions="Start"
       >
    <Frame.GestureRecognizers>
        <TapGestureRecognizer Tapped="Card_Tapped"/>
    </Frame.GestureRecognizers>
    <Frame.Content>
        <StackLayout>
            <Grid>
                <BoxView x:Name="boxCardColor" HorizontalOptions="Fill" BackgroundColor="#00ACC1" InputTransparent="True"/>
                <Image x:Name="imgCard" HorizontalOptions="Fill" Aspect="AspectFill" Source="cardimage1.PNG" InputTransparent="True"/>
            </Grid>
            <StackLayout Margin="10" >
                <Label Text="Kangaroo Valley Safari" FontSize="Large" Opacity="0.8"/>
                <Label Text="Located two hours south of Sydney in the Southern Highlands of New Wales,..." FontSize="Small" Opacity="0.6"/>
                <Label Text="Some Title Text" FontSize="Small" Opacity="0.8"/>
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label FontAttributes="Bold" FontSize="Default" TextColor="#FFB300" Text="SHARE"/>
                    <Label FontAttributes="Bold" FontSize="Default" TextColor="#FFB300" Text="EXPLORE"/>
                </StackLayout>
            </StackLayout>

        </StackLayout>
    </Frame.Content>
 
</Frame>